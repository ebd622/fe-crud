{
  "request": {
    "method": "POST",
    "urlPath": "/api/v1/products",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.['name'] == 'bike-timeout')]"
      },
      {
        "matchesJsonPath": "$[?(@.['description'] =~ /-?(.+)/)]"
      },
      {
        "matchesJsonPath": "$[?(@.['price'] =~ /[A-Za-z0-9_-]+/)]"
      }
    ]
  },
  "response": {
    "status": 500,
    "jsonBody": {
      "Error": "Server Error"
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
