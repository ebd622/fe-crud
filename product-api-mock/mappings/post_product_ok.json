{
  "request": {
    "method": "POST",
    "urlPath": "/api/v1/products",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.['name'] =~ /[A-Za-z0-9_-]+/)]"
      },
      {
        "matchesJsonPath": "$[?(@.['description'] =~ /-?(.+)/)]"
      },
      {
        "matchesJsonPath": "$[?(@.['price'] =~ /[A-Za-z0-9_-]+/)]"
      }    
    ]
  },
  "response": {
    "status": 201,
    "bodyFileName": "post_product_response.json",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
