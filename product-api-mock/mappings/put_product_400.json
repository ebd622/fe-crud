{
  "request": {
    "method": "PUT",
    "urlPath": "/api/v1/products",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.['id'] =~ /-?(\\p{L})/)]"
      },
      {
        "matchesJsonPath": "$[?(@.['name'] =~ /[A-Za-z0-9_-]+/)]"
      },
      {
        "matchesJsonPath": "$[?(@.['description'] =~ /-?(.+)/)]"
      },
      {
        "matchesJsonPath": "$[?(@.['price'] =~ /[A-Za-z0-9_-]+/)]"
      }    
    ]
  },
  "response": {
    "status": 400,
    "jsonBody": {
      "Error": "Wrong Id"
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
